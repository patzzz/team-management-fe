{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "api/*": ["./api/*"],
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "config/*": ["./config/*"],
      "constants/*": ["./constants/*"],
      "helpers/*": ["./helpers/*"],
      "hooks/*": ["./hooks/*"],
      "mocks/*": ["./mocks/*"],
      "slices/*": ["./slices/*"],
      "store/*": ["./store/*"],
      "translations/*": ["./translations/*"],
      "views/*": ["./views/*"],
      "mocks/*": ["./mocks/*"]
    },
    "checkJs": false
  },
  "include": ["src"]
}
